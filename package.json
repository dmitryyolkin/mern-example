{
  "name": "mern-example",
  "version": "1.0.0",
  "description": "Mern stack",
  "scripts": {
    "prod": "cross-env NODE_ENV=production npm run prod --prefix server",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",

    "server": "npm run start --prefix server",
    "server:install": "npm install --prefix server",
    "server:build": "npm run build --prefix server",

    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitryyolkin/mern-example.git"
  },
  "keywords": [
    "mern",
    "react"
  ],
  "author": "Dmitry Yolkin <dmitry.yolkin@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmitryyolkin/mern-example/issues"
  },
  "homepage": "https://github.com/dmitryyolkin/mern-example#readme",
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3"
  }
}
